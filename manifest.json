{
  "manifest_version": 2,
  "name": "Focus",
  "version": "1.2",
  "description": "Removes distractions on social media sites",
  "icons": {
    "128": "icon.png"
  },
  "author": "Sahir Vellani",

  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Focus",
    "default_popup": "popup/popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs",
    "http://www.facebook.com/*",
    "https://www.facebook.com/*"
  ]

}
